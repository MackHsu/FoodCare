<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_account"
        android:background="@color/mainColor4"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"        />

    <RelativeLayout
        android:layout_below="@+id/toolbar_account"
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/head_portrait"
            android:text="头像"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/J1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" >"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="25dp"/>

        <com.thinkcool.circletextimageview.CircleTextImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/defult"
            android:layout_toLeftOf="@+id/J1"
            android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true"
            app:citv_border_width="2dp"
            app:citv_border_color="#FF000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/L2"
        android:layout_below="@+id/L1"
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/name_account_l"
            android:text="用户名/昵称"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/J2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" >"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/name_account_r"
            android:text="请填写"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/J2"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/L3"
        android:layout_below="@+id/L2"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/age_account_l"
            android:text="年龄"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/J3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" >"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/age_account_r"
            android:text="请填写"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/J3"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/L4"
        android:layout_below="@+id/L3"
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/weight_account_l"
            android:text="体重"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/J4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" >"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/weight_account_r"
            android:text="请填写"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/J4"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/L5"
        android:layout_below="@+id/L4"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/height_account_l"
            android:text="身高"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/J5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" >"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/height_account_r"
            android:text="请填写"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/J5"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/L6"
        android:layout_below="@+id/L5"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fat_rate_account_l"
            android:text="体脂率"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/J6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" >"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fat_rate_account_r"
            android:text="请填写"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/J6"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/L7"
        android:layout_below="@+id/L6"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/my_goal_account_l"
            android:text="我的目标"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/J7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" >"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/my_goal_account_r"
            android:text="请填写"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/J7"/>

    </RelativeLayout>
    <Button
        android:id="@+id/submit_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="确定修改"
        android:background="@drawable/shape_corner"
        android:layout_below="@id/L7"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="@dimen/dp_40"
        android:visibility="invisible"
        />
</RelativeLayout>