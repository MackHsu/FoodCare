<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--取消-->
    <Button
        android:id="@+id/sport_sheet_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="取消"
        android:textSize="15sp"
        android:textColor="@color/mainColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>
    <!--添加-->
    <Button
        android:id="@+id/sport_sheet_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="添加"
        android:textSize="15sp"
        android:textColor="@color/mainColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <!--食物图片-->
    <com.thinkcool.circletextimageview.CircleTextImageView
        android:id="@+id/sport_sheet_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:citv_border_width="1dp"
        app:citv_border_color="@color/mainColor"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/sport_sheet_cancel"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/center_horizental_reference"/>
    <!--食物名称-->
    <TextView
        android:id="@+id/sport_sheet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/mainColor"
        android:layout_toRightOf="@id/sport_sheet_image"
        android:layout_alignTop="@id/sport_sheet_image"
        android:layout_marginLeft="20dp"
        android:textSize="20sp" />
    <!--每千克热量-->
    <TextView
        android:id="@+id/sport_sheet_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="energy"
        android:textColor="@color/mainColor"
        android:layout_below="@id/sport_sheet_name"
        android:layout_toRightOf="@id/sport_sheet_image"
        android:layout_marginLeft="20dp"/>\
    <!--居中参照物-->
    <TextView
        android:id="@+id/center_horizental_reference"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sport_sheet_image">

        <EditText
            android:id="@+id/time_edit_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:layout_marginBottom="30dp"
            android:maxLines="1"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟"
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:layout_toRightOf="@id/time_edit_text"
            android:layout_alignBaseline="@id/time_edit_text"/>
    </RelativeLayout>
    <!--输入分量-->

</RelativeLayout>