<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_account-info"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        />
    <TextView
        android:id="@+id/change_account_info_activity_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:text="用户信息"/>
    <EditText
        android:id="@+id/change_account_info_activity_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:hint="请输入新信息"
        />
    <TextView
        android:id="@+id/change_account_info_activity_hint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="12dp"
        android:text="请按照相应的格式输入"/>

    <Button
        android:id="@+id/change_account_info_activity_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>