<?xml version="1.0" encoding="utf-8"?>
<!--创建者：曾志昊-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:padding="5dp"
    android:layout_gravity="center_vertical"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/sport_item_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!--图片-->
            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/sport_image"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:src="@mipmap/ic_launcher"
                app:citv_border_color="@color/mainColor"
                app:citv_border_width="1dp" />
            <!--名称-->
            <TextView
                android:id="@+id/sport_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/sport_image"
                android:textSize="14sp"
                android:maxWidth="120dp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <!--热量-->
            <TextView
                android:id="@+id/sport_energy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:text="123123123"/>
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>