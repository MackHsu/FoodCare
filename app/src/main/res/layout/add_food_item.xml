<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--图片-->
    <ImageView
        android:id="@+id/food_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>
    <!--名称-->
    <TextView
        android:id="@+id/food_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/food_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>
    <!--热量-->
    <TextView
        android:id="@+id/food_energy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/food_info_button"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="#A1CE6C"
        android:layout_marginRight="40dp"
        android:textSize="15sp"/>
    <!--详情按钮-->
    <ImageButton
        android:id="@+id/food_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/food_info_button"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <!--分割-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_below="@id/food_image"/>
</RelativeLayout>